    {{#if products.length}}
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}

        <div class="col">
          <div class="card shadow-sm">
            <img src="{{image}}" alt="image">
            <div class="card-body">
              <p class="card-text fw-bold">{{title}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <p class="p-0 m-0">{{createdAtdate createdAt}}</p>
                <small class="text-body-secondary fs-5">{{price}}.00$</small>
              </div>
            </div>
                <div class="card-footer">
                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a href="/product/{{_id}}" type="button" class="btn btn-outline-primary">Detail</a>
                        {{#if @root.token}}
                          {{#ifequal user @root.userId}}
                            <button type="button" class="btn btn-outline-secondary">Edit</button>
                            <button type="button" class="btn btn-outline-danger">Right</button>
                          {{/ifequal}}
                        {{/if}}
                    </div>
                </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
    {{else}}
        <p class="fs-1"></p>
    {{/if}}

